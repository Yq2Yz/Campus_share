<!--pages/lost/lost.wxml-->
<scroll-view class='scbg' scroll-y="true">
    <block wx:for="{{showdata}}" wx:for-item="itemName" wx:for-index="id">
        <view class='box'>
            <view class='firstblock'>
                <image class="touxiang" src="{{itemName.face_url}}"></image>
                <view class="person">
                    <view class="name">
                        <text class="showname">{{itemName.username}}</text>
                    </view>
                    <view class="tel">
                        <text class="showtime">{{itemName.send_timestamp}}</text>
                    </view>
                </view>
            </view>
            <view class='secondblock'>
                <text class='content'>{{itemName.content}}</text>
            </view>
            <view class='thirdblock'>
                <image class="like" src="{{itemName.islike == 1 ? '/images/likeplus.png' : '/images/like.png'}}" bindtap='like' id='{{itemName.lid}}'></image>
                <text class='num' wx:if="{{itemName.total_likes !=0}}">{{itemName.total_likes}}</text>
            </view>
        </view>
    </block>
</scroll-view>
