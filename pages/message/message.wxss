/* pages/message/message.wxss */
.box {
    width: 100%;
    background-color: white;
    padding-top: 30rpx;
    border-bottom: 20rpx solid #efefef;
  }
  
  .firstblock {
    height: 150rpx;
    margin-left: 4%;
    margin-right: 4%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }
  
  .touxiang {
    width: 130rpx;
    height: 130rpx;
  }
  
  .person {
    width: 75%;
    height: 130rpx;
    margin-left: 30rpx;
    margin-top: 10rpx;
  }
  
  .name {
    display: flex;
    justify-content: flex-start;
    margin-top: 10rpx;
    font-size: 40rpx;
    flex-direction: row;
  }
  
  .tel {
    display: flex;
    justify-content: flex-start;
    margin-top: 35rpx;
    flex-direction: row;
  }
  
  .showname {
    font-size: 34rpx;
    color: #3f51b5;
    font-family: PingFangSC-regular;
    font-weight: bold;
  }
  
  .showtime {
    font-size: 25rpx;
    color: #5e5d5d;
    font-family: PingFangSC-regular;
  }
  
  .secondblock {
    margin-top: 10rpx;
    margin-left: 4%;
    margin-right: 4%;
    padding-bottom: 20rpx;
    border-bottom: 5rpx solid #bbb;
  }
  
  .content {
    font-size: 29rpx;
    color: #101010;
  }
  
  .thirdblock {
    height: 100rpx;
    margin-left: 4%;
    margin-right: 4%;
    display: flex;
    justify-content: space-between;
  }
  
  .combination{
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }
  
  .like {
  
    margin-left: 20rpx;
    width: 50rpx;
    height: 50rpx;
  }
  
  .num {
    height: 50rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #101010;
  }
  
  .del{
    margin-top: 25rpx;
    margin-right: 20rpx;
    width: 150rpx;
    height: 50rpx;
    border-radius: 10rpx;
    background-color: #E51C23;
    font-size: 30rpx;
    text-align: center;
    color: #FFFFFF;
    line-height: 50rpx;
  }

  .nocontent {
    width: 100%;
    height: calc(100% - 100rpx);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
}
.nocontent image {
    padding-left: 80rpx;
    width: 340rpx;
    height: 272rpx;
}

.blank_text {
    padding-top: 40rpx;
    font-size: 32rpx;
    letter-spacing: 2rpx;
    color: #c6c6c8;
}