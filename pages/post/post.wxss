/* post.wxss */
@import '../components/lostfound/lostfound.wxss';

.wrapper {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
}
.tab-content {
  width: 240rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
}
.select {
  border-bottom-width: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: blue;
  color: blue;
}
.noSelect {
  color: #666;
}
.tip {
  width: 100%;
  color: red;
  font-size: 28rpx;
  background-color: #e6e6e6;
}
.title{
    display: flex;
    flex-direction: row;
    justify-content: space-around
}

.title_right{
    display: flex;
    flex-direction: column;
}
.title_image {
  margin: auto 0rpx;
  border: 1rpx solid #d3d3d3;
  width: 202rpx;
  height: 326rpx;
  display: block;
  box-sizing: border-box;
}
.title_image image {
  width: 202rpx;
  height: 291rpx; 
  display: inline-block; 
  box-sizing: border-box;

}
.weui-cell_select {
  padding: 0;
  width: 535rpx;
  height: 75rpx;
  display: flex;
  box-sizing: border-box;
  left: 0rpx; top: 0rpx;
}

.weui-cell_input {
  margin-top: 4rpx;

}
.weui-label {
  width: 170rpx;
  height: 50rpx;
  display: block;
  box-sizing: border-box;
}


.describe {
  border: 1px solid #d3d3d3;
  height: 340rpx;
  line-height: 28rpx;
  width: 535rpx;
  margin-bottom: 5rpx;
}
.describe_sell {
  border: 1px solid #d3d3d3;
  line-height: 28rpx;
  margin-bottom: 5rpx;
  margin-top: 5rpx;
  width: 577rpx;
  height: 333rpx;
  display: block;
  box-sizing: border-box; 


}
.outside_border {
  width: 98%;
  margin: 0rpx auto;
  margin-bottom: 600rpx;
}
